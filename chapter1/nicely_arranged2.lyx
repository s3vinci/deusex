\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{dx_{j}(t)}{dt}=-\frac{x_{j}(t)}{\tau_{+}}+S_{j}(t).
\end{equation}

\end_inset


\begin_inset Box Frameless
